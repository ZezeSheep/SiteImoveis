<div class="blog">

    <h1>Lista de Apartamentos</h1>

    {{#each imovel}}

        <div class="card mb-3">
            <img src={{dataValues.imagem}} class="card-img-top" alt="Apartamento imagem">
            <div class="card-body post">
                <h5 class="card-title">{{dataValues.titulo}}</h5>
                <p class="card-text">{{dataValues.descricao}}</p>
                <p class="card-text"><small class="text-muted">{{dataValues.endereco}}</small></p>
                <p class="card-text"><small class="text-muted">{{dataValues.num_quartos}} quartos, {{dataValues.num_banheiro}} banheiros, {{dataValues.num_garagem}} vagas de garagem, {{dataValues.area}} mÂ²</small></p>
                <p class="card-text">Aluguel: {{dataValues.aluguel}}</p>
                <p class="card-text">Condominio: {{dataValues.condominio}}</p>
                <p class="card-text">IPTU: {{dataValues.iptu}}</p>
            </div>
        </div>

    {{/each}}

</div>

<style>
    .blog {
        max-width: 1000px;
        margin-left: auto;
        margin-right: auto;
        text-align: center;
    }

    .post p{
        margin: 2px !important;
    }

    .blog h1 {
        margin-top: 30px;
        margin-bottom: 30px;
    }
</style>

